[Unit]
Description=Music Player Daemon
After=network.target
After=sound.target

[Service]
Type=simple
ExecStartPre=/usr/bin/bash -lc 'mkdir -p %h/.local/share/mpd %h/Music/playlists'
ExecStart=mpd --no-daemon %h/.config/mpd/mpd.conf
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target
