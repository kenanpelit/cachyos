[Unit]
Description=Transmission BitTorrent Daemon
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStartPre=%h/.local/bin/transmission-setup
ExecStart=transmission-daemon -f --log-level=error
ExecReload=/usr/bin/kill -s HUP $MAINPID
Restart=on-failure
RestartSec=10
TimeoutStartSec=30
TimeoutStopSec=10

[Install]
WantedBy=default.target
